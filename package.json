{
  "name": "es6-library-starter",
  "version": "0.1.0",
  "description": "Starter kit for npm module using es6.",
  "main": "index.js",
  "scripts": {
    "compile": "rollup -c rollup.config.js",
    "prepublish": "BABEL_ENV=production npm run compile",
    "lint": "eslint -c .eslintrc src",
    "pretest": "BABEL_ENV=test npm run compile",
    "test": "nyc ava"
  },
  "keywords": [
    "es6",
    "module",
    "starter",
    "boilerplate"
  ],
  "author": "Gerald Yeo <gerald.yeo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.7",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "nyc": "^5.5.0",
    "rollup": "^0.25.2",
    "rollup-plugin-babel": "^2.3.9"
  },
  "ava": {
    "files": [
      "./tests/**/*.test.js"
    ],
    "failFast": true,
    "serial": true,
    "tap": true,
    "verbose": true,
    "require": [
      "./tests/config.babel.js"
    ]
  }
}
