{
  "name": "es6-library-starter",
  "version": "0.1.0",
  "description": "Starter kit for npm module using es6.",
  "main": "index.js",
  "scripts": {
	"prepublish": "npm run compile",
	"precompile": "rm -rf lib",
	"compile": "webpack -p",
    "lint": "eslint -c .eslintrc src",
    "pretest": "webpack",
    "test": "nyc ava"
  },
  "keywords": [
    "es6",
    "module",
    "starter",
    "boilerplate"
  ],
  "author": "Gerald Yeo <gerald.yeo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-webpack": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-loader": "^1.2.1",
    "eslint-plugin-standard": "^1.3.1",
    "nyc": "^5.5.0",
    "webpack": "^2.0.6-beta",
    "yargs": "^3.32.0"
  },
  "ava": {
    "files": [
      "./tests/**/*.test.js"
    ],
    "failFast": true,
    "serial": true,
    "tap": true,
    "verbose": true,
    "require": [
      "./tests/config.babel.js"
    ]
  }
}
